@model CustomAuthenticationMVC.Models.Question
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (@Html.BeginForm(null, null, FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Please answer following question:</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <!--@Html.LabelFor(model => model.QuestionText, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <div class="col-md-10">
                <ul>                
                    <li>
                        @Html.DisplayTextFor(model => model.QuestionText)
                    </li>
                </ul>
            </div>
        </div>
    </div>

}
